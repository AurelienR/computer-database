<web-app 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">
	<jsp-config> 
		<taglib>
		    <taglib-uri>paginationLib</taglib-uri>
		    <taglib-location>/WEB-INF/pagination.tld</taglib-location>
		</taglib>
	</jsp-config>
	<servlet>
		<description>
		</description>
		<display-name>NewComputerServlet</display-name>
		<servlet-name>NewComputerServlet</servlet-name>
		<servlet-class>com.excilys.cdb.servlets.NewComputerServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>CreateComputerServlet</display-name>
		<servlet-name>CreateComputerServlet</servlet-name>
		<servlet-class>com.excilys.cdb.servlets.CreateComputerServlet</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>DeleteComputerServlet</display-name>
		<servlet-name>DeleteComputerServlet</servlet-name>
		<servlet-class>com.excilys.cdb.servlets.DeleteComputerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NewComputerServlet</servlet-name>
		<url-pattern>/NewComputerServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateComputerServlet</servlet-name>
		<url-pattern>/CreateComputerServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteComputerServlet</servlet-name>
		<url-pattern>/DeleteComputerServlet</url-pattern>
	</servlet-mapping> 
   <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
